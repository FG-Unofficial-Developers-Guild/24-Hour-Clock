# EditorConfig is awesome: https://editorconfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# 4 space indentation
[*.lua]
indent_style = tab
indent_size = 4

# 4 space indentation
[*.xml]
max_line_length = off
indent_style = space
indent_size = 2

# 4 space indentation
[*.md]
indent_style = tab
indent_size = 1
